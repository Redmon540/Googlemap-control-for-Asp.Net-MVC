<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.PageTitle</title>
    @Html.Partial("_GoogleAnalytics")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/content/site.css" rel="stylesheet">
    <link href="~/js/google-code-prettify/prettify.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
            <div class="container pl-4 ml-5 flex-row-reverse">
                <ul class="nav justify-content-end">
                    <li><a class="text-decoration-none" href="~/"><i class="fa-solid fa-house"></i> Home</a></li>
                    <li><a class="text-decoration-none" href="https://github.com/jmelosegui/GooglemapMvc" target="_blank"><i class="bi bi-github"></i> Project on GitHub</a></li>
                    <li><a class="text-decoration-none" href="https://github.com/jmelosegui/GooglemapMvc/issues" target="_blank"><i class="bi bi-heart-fill"></i> Report a bug</a></li>
                </ul>
            </div>
    </nav>
    <div class="container">
        <div class="row">
            <div id="title" class="col-xs-6 col-sm-6"><h2>Googlemap control for Asp.Net MVC</h2></div>
            <div class="col-xs-6 col-sm-6 justify-content-end">
                <ul class="social-button">
                    <li><iframe src="https://ghbtns.com/github-btn.html?user=jmelosegui&repo=googlemapmvc&type=star&count=true&size=small" frameborder="0" scrolling="no"></iframe></li>
                    <li> @Html.Partial("_TwitterButton")</li>
                </ul>
            </div>
        </div>        
        <div class="row row-offcanvas row-offcanvas-left">
            <div class="col-sm-4 col-md-3 sidebar-offcanvas" id="sidebar" role="navigation">
                <p class="d-block d-sm-none">
                    <button type="button" class="btn btn-xs" data-toggle="offcanvas">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </p>
                <div class="sidebar-nav">
                    @Html.Partial("_Navigation")
                </div>
            </div>
            <div class="col-xs-11 col-sm-8 col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>    
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <footer>
                    @*<nav class="navbar navbar-light bg-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    </nav>*@
                </footer>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/google-code-prettify/prettify.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
